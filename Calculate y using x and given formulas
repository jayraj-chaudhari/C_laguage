//program to take x and n as input and give y as output accordingly
//Jayraj Chaudhari
#include <stdio.h>
#include<math.h>
int main()
{
    float x,y,n;
    printf("Enter value of x:");
    scanf("%f",&x);
    printf("Enter the value of n from Range R+{2}-(1,3):");
    scanf("%f",&n);
    if(n==1)
    {
        y=x+1;
        printf("Value of y is %f",y);
    }
    else if(n==2)
    {
        y=1+x/n;
        printf("Value of y is %f",y);
    }
    else if(n==3)
    {
        y=1+pow(x,n);
        printf("Value of y is %f",y);
    }
    else if(n>3||n<1)
    {
        y=1+n*x;
        printf("Value of y is %f",y);
    }
    else
    {
        printf("Invalid Input");
    }
}

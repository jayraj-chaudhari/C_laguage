//Simple calculator using switch statement
//Jayraj Chaudhari
#include<stdio.h>
int main()
{
    float a,b;
    int c;
    
    printf("Enter two numbers you want to perform calculation on:");
    scanf("%f%f",&a,&b);
    printf("Enter the opration you want to perform\n1 to add\n2 to subtract\n3 to multiply\n4 to devide:");
    scanf("%d",&c);
    switch(c)
    {
        case 1:
        printf("%.2f + %.2f = %.2f",a,b,a+b);
        break;
        case 2:
        printf("%.2f - %.2f = %.2f",a,b,a-b);
        break;
        case 3:
        printf("%.2f * %.2f= %.2f",a,b,a*b);
        break;
        case 4:
        if (b!=0)
        { 
            printf("%.2f / %.2f= %.2fs",a,b,a/b);
        }
        else
        printf("Can not devide by zero.");
        break;
        default:
        printf("Incorrect input");
        break;
    }
    return 0;
}

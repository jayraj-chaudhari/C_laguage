//program to calculate 1/1!+2/2!+3/3!+.....N.
//Jayraj Chaudhari
#include<stdio.h>
int main()
{
    int n,i;
    float factorial=1,sum=0;
    printf("Enter the no of terms for the series");
    scanf("%d",&n);
    for(i=1;i<=n-1;i++)
    {
        factorial=factorial*i;
        sum=sum+1.0/factorial;
    }
    printf("Sum of the series 1/1!+2/2!+3/3!+.....till %d is %f ",n,sum);
}

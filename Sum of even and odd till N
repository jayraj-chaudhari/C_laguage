//program to calculate sum of even and odd numbers till n
//Jayraj Chaudhari
#include<stdio.h>
int main()
{
    int n,a,even=0,odd=0,sumeven=0,sumodd=0;
    printf("Enter the number");
    scanf("%d",&n);
    for(a=1;a<=n;a++)
    {
       int even=0,odd=0;
       if(a%2==0)//even
       {
        even=a;
       }
       else//odd
       {
        odd=a;
       }
       sumeven =sumeven +even;
       sumodd = sumodd +odd;
    
    }
    printf("Sum of all even digits till %d is %d\n",n,sumeven);
     printf("Sum of all odd digits till %d is %d",n,sumodd);

}

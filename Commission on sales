// program to calculate comission of the given sales from a set of formulas
// Jayraj Chaudhari
#include <stdio.h>
int main()
{
    float sale, comm;
    printf("Enter the sales:");
    scanf("%f", &sale);
    if (sale <= 500 && sale >= 0)
    {
        comm = sale / 20;
        printf("Comission is %f", comm);
    }
    else if (sale > 500 && sale <= 2000)
    {
        comm = 35 + (sale - 100.0) / 10;
        printf("Comission is %f", comm);
    }
    else if (sale > 2000 && sale <= 5000)
    {
        comm = 185 + 12 * (sale - 2000) / 100;
        printf("Comission is %f", comm);
    }
    else if (sale > 5000)
    {
        comm = (12.5 * sale) / 100;
        printf("Comission is %f", comm);
    }
    else
    {
        printf("Wrong input");
    }
}

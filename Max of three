// program to read three numbers and print maximum
// Jayraj Chaudhari
#include <stdio.h>
int main()
{
    int a, b, c;
    printf("Enter three digits:");
    scanf("%d\n%d\n%d", &a, &b, &c);
    if (a > b)
    {
        if (a > c)
        {
            printf("%d is greatest", a);
        }
        else
            printf("%d is greatest", c);
    }
    else
    {
        if (b >= c)
            printf("%d is greatest", b);
        else
            printf("%d is greatest", c);
    }
    return 0;
}

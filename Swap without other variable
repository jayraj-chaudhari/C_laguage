//program to swap two variables without using third variable
//Jayraj Chaudhari

#include<stdio.h>
int main()
{
    int a,b;
    printf("Entre the value of a:");
    scanf("%d",&a);
    printf("Entre the value of b:");
    scanf("%d",&b);

    a=a+b;
    b=a-b;
    a=a-b;

    printf("After the swap a=%d and b=%d",a,b);
    return 0;
}

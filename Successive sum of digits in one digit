// Singal digit answer for sum of digits
// Jayraj Chaudhari
#include <stdio.h>
int main()
{
    int num, q, sum = 0,sum2,a;
    
    printf("Enter the number:");
    scanf("%d", &num);
    while (num>9)
    {
        while (num > 0)
        {
            q = num % 10;
            num = num / 10;
            sum = sum + q;
            sum2=sum;
        }
        num=num+sum;
        sum=num-sum;
        num=num-sum;
    }
    printf("Sum of digits in singal digit by successive process is \n%d",sum2);
}
